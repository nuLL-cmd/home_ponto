<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.heinrichreimersoftware.materialintro.view.parallax.ParallaxRelativeLayout
        android:id="@+id/relativeDaddy_f_collect_data"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim_f_collect_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/lbl_description_f_data_info"
            android:layout_below="@id/lbl_title_f_collect_data"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15sp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="list.json"
            app:lottie_loop="true" />


        <TextView
            android:id="@+id/lbl_title_f_collect_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"
            android:shadowColor="#85C8C8C8"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="40"
            android:layout_marginBottom="15sp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/baloo_da"
            android:text="Dica de ouro"
            android:textColor="@color/gray_596475"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            app:layout_parallaxFactor="2" />

        <TextView
            android:id="@+id/lbl_description_f_data_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            app:layout_parallaxFactor="2"
            android:padding="@dimen/_20sdp"
            android:shadowColor="#85C8C8C8"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="40"
            android:text="Registrando seu ponto pelo app, você obtém informações sólidas sobre entradas, saidas, intervalos, horas extras, etc."
            android:textAlignment="center"
            android:textColor="#838383"
            android:textSize="@dimen/_12ssp" />

    </com.heinrichreimersoftware.materialintro.view.parallax.ParallaxRelativeLayout>
</layout>