<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:id="@+id/scroll_daddy_a_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_291965"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/relative_daddy_a_main"
            android:layout_width="match_parent"
            android:background="@color/purple_291965"
            tools:context=".view.activity.CollectDataActivity"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_date_a_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_48sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:layout_toStartOf="@id/btn_settings_a_main"
                android:fontFamily="@font/baloo_da"
                android:text="20 Fevereiro"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <ImageButton
                android:id="@+id/btn_settings_a_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_date_a_main"
                android:layout_alignBottom="@id/txt_date_a_main"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/bg_button_color_primary_global"
                android:src="@drawable/ic_settings" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_primary_data_a_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_below="@id/txt_date_a_main"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:backgroundTint="@color/purple_533EA8"
                app:cardCornerRadius="@dimen/_20ssp"
                app:cardElevation="@dimen/_20sdp">


                <RelativeLayout
                    android:id="@+id/relative_data_top_a_main"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/anim_wave_one_a_main"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:alpha="0.3"
                        android:translationX="-31dp"
                        android:translationY="@dimen/_60sdp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="wave.json"
                        app:lottie_loop="true" />
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/anim_wave_two_a_main"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:scaleX="-1"
                        android:alpha="0.4"
                        android:translationY="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:translationX="31dp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="wave.json"
                        app:lottie_loop="true" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </RelativeLayout>

    </ScrollView>
</layout>