<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/relativeDaddy_splash"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:context=".activity.SplashActivity"

        tools:ignore="ContentDescription">

        <LinearLayout
            android:id="@+id/linearLogo_splash"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/_160sdp">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_splash"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:lottie_fileName="clock.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <ImageView
                android:id="@+id/imageLogo_splash"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/image_logo"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/txtVersion_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/bangers"
            android:textColor="@color/green_96AFB1"/>


    </RelativeLayout>
</layout>